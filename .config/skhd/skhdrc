# create desktop and follow focus
#cmd + alt - n : yabai -m space --create;\
#                id=$(yabai -m query --displays --display | grep "spaces");\
#                yabai -m space --focus $(echo ${id:10:${#id}-10})

# destroy desktop
#cmd + alt - w : yabai -m space --destroy

# Move focus container to workspace
#ctrl + alt - m : yabai -m window --space last; yabai -m space --focus last

# Only move focus container to prev/next if in current display
ctrl + alt - z : [[ $(yabai -m query --spaces --space | jq '.index' ) != $(yabai -m query --displays --display | jq '.spaces[0]') ]] && (yabai -m window --space prev; yabai -m space --focus prev )
ctrl + alt - x : [[ $(yabai -m query --spaces --space | jq '.index' ) != $(yabai -m query --displays --display | jq '.spaces[-1]') ]] && ( yabai -m window --space next; yabai -m space --focus next )
#ctrl + alt - z : yabai -m window --space prev || yabai -m window --space last; yabai -m space --focus prev || yabai -m space --focus last
#ctrl + alt - x : yabai -m window --space next || yabai -m window --space first; yabai -m space --focus next || yabai -m space --focus first
ctrl + alt - 1 : yabai -m window --space 1; yabai -m space --focus 1
ctrl + alt - 2 : yabai -m window --space 2; yabai -m space --focus 2
ctrl + alt - 3 : yabai -m window --space 3; yabai -m space --focus 3
ctrl + alt - 4 : yabai -m window --space 4; yabai -m space --focus 4
ctrl + alt - 5 : yabai -m window --space 5; yabai -m space --focus 5
ctrl + alt - 6 : yabai -m window --space 6; yabai -m space --focus 6
ctrl + alt - 7 : yabai -m window --space 7; yabai -m space --focus 7
ctrl + alt - 8 : yabai -m window --space 8; yabai -m space --focus 8
ctrl + alt - 9 : yabai -m window --space 9; yabai -m space --focus 9

# Move focus container to workspace
# Only move focus to prev/next if in current display
shift + ctrl - z : [[ $(yabai -m query --spaces --space | jq '.index' ) != $(yabai -m query --displays --display | jq '.spaces[0]') ]] && yabai -m space --focus prev
shift + ctrl - x : [[ $(yabai -m query --spaces --space | jq '.index' ) != $(yabai -m query --displays --display | jq '.spaces[-1]') ]] && yabai -m space --focus next
#shift + ctrl - z : yabai -m space --focus prev || yabai -m space --focus last
#shift + ctrl - x : yabai -m space --focus next || yabai -m space --focus first
shift + ctrl - 1 : yabai -m space --focus 1
shift + ctrl - 2 : yabai -m space --focus 2
shift + ctrl - 3 : yabai -m space --focus 3
shift + ctrl - 4 : yabai -m space --focus 4
shift + ctrl - 5 : yabai -m space --focus 5
shift + ctrl - 6 : yabai -m space --focus 6
shift + ctrl - 7 : yabai -m space --focus 7
shift + ctrl - 8 : yabai -m space --focus 8
shift + ctrl - 9 : yabai -m space --focus 9

# focus monitor
ctrl + shift - s  : yabai -m display --focus prev
ctrl + shift - a  : yabai -m display --focus next
#ctrl + shift - 1  : yabai -m display --focus 1
#ctrl + shift - 2  : yabai -m display --focus 2

# send window to monitor and follow focus
#ctrl + alt - c  : yabai -m window --display recent; yabai -m display --focus recent
ctrl + alt - s  : yabai -m window --display prev; yabai -m display --focus prev
ctrl + alt - a  : yabai -m window --display next; yabai -m display --focus next

# move window
shift + ctrl - a : yabai -m window --move rel:-20:0
shift + ctrl - s : yabai -m window --move rel:0:20
shift + ctrl - w : yabai -m window --move rel:0:-20
shift + ctrl - d : yabai -m window --move rel:20:0

# increase window size
ctrl + alt - left : yabai -m window --resize left:-20:0
ctrl + alt - down : yabai -m window --resize bottom:0:20
ctrl + alt - up : yabai -m window --resize top:0:-20
ctrl + alt - right : yabai -m window --resize right:20:0

# decrease window size
#shift + cmd - a : yabai -m window --resize left:20:0
#shift + cmd - s : yabai -m window --resize bottom:0:-20
#shift + cmd - w : yabai -m window --resize top:0:20
#shift + cmd - d : yabai -m window --resize right:-20:0

# rotate tree
alt - r : yabai -m space --rotate 90

# mirror tree y-axis
alt - y : yabai -m space --mirror y-axis

# mirror tree x-axis
alt - x : yabai -m space --mirror x-axis

# toggle window native fullscreen
ctrl + alt - f : yabai -m window --toggle zoom-fullscreen

# change layout of desktop
ctrl + alt - a : yabai -m space --layout bsp
ctrl + alt - d : yabai -m space --layout float

# opens iTerm2
ctrl + shift - return : "${HOME}"/bin/open-iterm2.sh

#Opens youtube
ctrl + shift - p : python3 "${HOME}"/bin/youtube-window.py

ctrl + alt - p : yabai -m window --toggle float
